
{
  "manifest_version": 3,
  "name": "GeminiAnswerBot",
  "version": "3.2.2",
  "description": "A smart Chrome extension powered by the Google Gemini API.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "contextMenus",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "ui/popup.html",
    "default_icon": {
      "128": "assets/icon.png"
    }
  },
  "icons": {
    "128": "assets/icon.png"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "options_page": "ui/options.html",
  "web_accessible_resources": [
    {
      "resources": [
        "assets/highlighter.css",
        "assets/dialog.css",
        "assets/toolbar.css",
        "js/googleScraper.js",
        "js/vendor/Readability.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}