{
  "manifest_version": 3,
  "name": "GeminiAnswerBot",
  "version": "5.0.0",
  "description": "AI-powered quiz assistant with study mode, custom personas, and batch processing.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "contextMenus",
    "tabs"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*"
  ],
  "optional_host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "ui/popup.html",
    "default_icon": {
      "128": "assets/icon.png"
    }
  },
  "icons": {
    "128": "assets/icon.png"
  },
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  "options_page": "ui/options.html",
  "web_accessible_resources": [
    {
      "resources": [
        "assets/ui-enhancements.css",
        "assets/content.css",
        "assets/widget.css",
        "js/stealth.js",
        "js/utils/helpers.js",
        "js/vendor/mark.min.js",
        "js/vendor/marked.min.js",
        "js/vendor/dompurify.min.js",
        "js/content.js",
        "js/autoclick.js",
        "js/widget.js",
        "assets/icon.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Q",
        "mac": "Alt+Q"
      },
      "description": "Open GeminiAnswerBot"
    },
    "toggle-widget": {
      "suggested_key": {
        "default": "Alt+W",
        "mac": "Alt+W"
      },
      "description": "Toggle Floating Widget"
    }
  }
}