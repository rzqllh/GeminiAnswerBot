{
  "manifest_version": 3,
  "name": "GeminiAnswerBot",
  "version": "1.9.7",
  "description": "A smart, privacy-first Chrome extension powered by the Google Gemini API.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "contextMenus"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*",
    "<all_urls>"
  ],
  "action": {
    "default_popup": "ui/popup.html",
    "default_icon": {
      "128": "assets/icon.png"
    }
  },
  "icons": {
    "128": "assets/icon.png"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "options_page": "ui/options.html",
  "web_accessible_resources": [
    {
      "resources": [
        "assets/highlighter.css",
        "assets/dialog.css",
        "assets/toolbar.css",
        "js/vendor/dompurify.min.js",
        "js/utils.js",
        "js/vendor/marked.min.js",
        "js/mark.min.js",
        "js/content.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["assets/highlighter.css", "assets/dialog.css", "assets/toolbar.css"]
    }
  ]
}