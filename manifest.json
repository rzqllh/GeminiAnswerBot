{
  "manifest_version": 3,
  "name": "GeminiAnswerBot",
  "version": "14.0",
  "description": "An intelligent quiz assistant powered by Gemini AI.",
  "permissions": ["activeTab", "scripting", "storage", "contextMenus"],
  "host_permissions": ["https://generativelanguage.googleapis.com/*"],
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon.png"
    }
  },
  "icons": {
    "128": "icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["highlighter.css"],
      "matches": ["<all_urls>"]
    }
  ]
}