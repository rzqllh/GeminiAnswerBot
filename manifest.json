{
  "manifest_version": 3,
  "name": "GeminiAnswerBot",
  "version": "3.4.2",
  "description": "A smart Chrome extension powered by the Google Gemini API.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "contextMenus",
    "tabs"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*"
  ],
  "optional_host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "ui/popup.html",
    "default_icon": {
      "128": "assets/icon.png"
    }
  },
  "icons": {
    "128": "assets/icon.png"
  },
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  "options_page": "ui/options.html",
  "web_accessible_resources": [
    {
      "resources": [
        "assets/ui-enhancements.css",
        "assets/content.css",
        "js/stealth.js",
        "js/vendor/mark.min.js",
        "js/vendor/marked.min.js",
        "js/vendor/dompurify.min.js",
        "js/content.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Q",
        "mac": "Alt+Q"
      },
      "description": "Open GeminiAnswerBot"
    }
  }
}